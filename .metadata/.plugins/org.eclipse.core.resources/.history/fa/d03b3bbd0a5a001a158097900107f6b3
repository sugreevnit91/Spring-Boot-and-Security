package io.springboot.app.CourseApp.topics;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

import org.springframework.stereotype.Service;

@Service
public class TopicService {

	private List<Topic> list = new ArrayList<Topic>(Arrays.asList(new Topic("Spring", "Spring Framework", "Spring Framework Descreption"),
			new Topic("DS", "DS Tutorial", "DS Tutorial Descreption"),
			new Topic("Java", "Java tutorial", "Java tutorial Descreption"),
			new Topic("Hibernate", "Hibernate tutorial", "Hibernate tutorial Descreption")));

	public List<Topic> getAllTopics() {
		return list;
	}
	
	public Topic getTopicById(String id) {
		return list.stream().filter(tp->tp.getId().equalsIgnoreCase(id)).findAny().get();
	}

	public void addTopic(Topic topic) {
		list.add(topic);
	}

	public void updateTopic(Topic topic, String id) {
		Topic topic2 = list.stream().filter(t->t.getId().equals(id)).findFirst().get();
		list.set(list.indexOf(topic2), topic);
	}

	public void deleteTopic(String id) {
		Topic topic = list.stream().filter(t->t.getId().equals(id)).findFirst().get();
		list.remove(topic);
	}
}
